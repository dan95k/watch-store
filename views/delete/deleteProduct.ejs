<% include ../partials/header %>
<div class="container" style="margin-top: 20px;">
	<div class="card">
	<form action="/delete/product" method="post">
	  <h5 class="card-header">Product Lines Control</h5>
	  <div class="card-body">
	  	<h3><em>Select Products To Delete</em></h2>
		<div class="row">
			<% lines.forEach(function(line){ %>
		  <div class="col-sm-6" style="margin: 10px 0;">
		    <div class="card">
		      <div class="card-body">
		        <h4 class="card-title">Products Under "<%=line.name%>"</h4>
		        <p>
		        <% line.products.forEach(function(product){ %>
		        <div style="margin-left: 20px">
		        <input type="checkbox" class="form-check-input" name='selected' value='{"product":"<%=product._id%>","line":"<%=line._id%>"}'>
		        <strong><a target="_blank" rel="noopener noreferrer" href="<%=product.image%>" style='color: inherit;'><%=product.model%></a></strong><br></div>
		        <% }); %>
		        </p>
		      </div>
		    </div>
		  </div>
		  <% }); %>
		</div>
	  </div>
	  	  	<button class="btn btn-danger btn-block">Delete selected</button>
	</form>
	</div>
</div>


<% include ../partials/footer %>