<% include partials/header %>

  <div id="my_carousel" class="carousel slide" data-ride="false">
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img class="d-block w-100" src="/slide1.jpg" alt="First slide">
        <div class="carousel-caption d-none d-md-block text-left">
        	<h2><a class="text-white">UNICO 42 MM Collection</h2>
          <a class="btn btn-info" role='button' href="/line/5bb8cb187cbb471de89ee136">To Collection</a>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/slide2.jpg" alt="Second slide">
        <div class="carousel-caption d-none d-md-block text-left">
        	<h2><a class="text-white">MECA-10 Collection</h2>
        	<a class="btn btn-info" role='button' href="/line/5bb8e5527cbb471de89ee139">To Collection</a>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/slide3.jpg" alt="Third slide">
        <div class="carousel-caption d-none d-md-block text-left">
        	<h2><a class="text-white">PERPETUAL CALENDAR Collection</a></h2>
        	<a class="btn btn-info" role='button' href="/line/5bb8e5807cbb471de89ee13a">To Collection</a>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/slide4.jpg" alt="Third slide">
        <div class="carousel-caption d-none d-md-block text-left">
        	<h2><a class="text-white">Ferrari Collection</a></h2>
        	<a class="btn btn-info" role='button' href="/line/5bb8e50f7cbb471de89ee138">To Collection</a>
        </div>
      </div>
      <div class="carousel-item">
        <img class="d-block w-100" src="/slide5.jpg" alt="Fourth slide">
        <div class="carousel-caption d-none d-md-block text-left">
        	<h4><a class="text-white" href="https://www.hublot.com">Photos By<br>Hublot<br>Worldwide</a></h4>
        </div>
      </div>
    </div>
    <a class="carousel-control-prev" href="#my_carousel" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#my_carousel" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
    <ol class="carousel-indicators">
      <li data-target="#my_carousel" data-slide-to="0" class="active"></li>
      <li data-target="#my_carousel" data-slide-to="1"></li>
      <li data-target="#my_carousel" data-slide-to="2"></li>
      <li data-target="#my_carousel" data-slide-to="3"></li>
      <li data-target="#my_carousel" data-slide-to="4"></li>
    </ol>
  </div>

<div class="container">
	<div class="card-deck">
			<div class="row">
<% lines.forEach(function(line){ %>
    		<div class="col-md-6 mt-4 col-lg-6">
    		    <div class="card profile-card-4">
                    <div class="card-img-block">
                        <div class="info-box">
                        	<p>Line Name: <%=line.name%></p>
                        	<p>Products In Line: <%=line.products.length%></p>
                        	<p><%=line.description.substring(0,70)%></p>
                        </div>
                        <img class="img-fluid" src="<%=line.image%>" alt="Card image cap">
                    </div>
                    <div class="card-body pt-5">
                        <h4 class="card-title text-center"><%=line.name%></h4>
                        <p class="card-text text-center"><%=line.description.substring(0,100)%></p>
                        <a role='button' class="btn btn-dark btn-sm btn-block" href="/line/<%=line._id%>">To Collection</a>
                    </div>
                </div>
    		</div>
<% }); %>
		</div>
	</div>
</div>


<% include partials/footer %>