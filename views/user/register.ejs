<% include ../partials/header %>
<div class="container" id='registerbox'>
	<form action='/register' method='post'>
		  <div class="form-row">
		    <div class="form-group col-md-4">
		      <label>Username</label>
		      <input type="text" class="form-control" name="username" placeholder="Username" required>
		    </div>
		    <div class="form-group col-md-4">
		      <label>Email</label>
		      <input type="email" class="form-control" name="email" placeholder="Email" required>
		    </div>
		    <div class="form-group col-md-4">
		      <label>Password</label>
		      <input type="password" class="form-control" name="password" placeholder="Password" required>
		    </div>
		  </div>
	 <div class="form-row">
		  <div class="form-group col-md-6">
		    <label>Address</label>
		    <input type="text" class="form-control" name="mainAddress" placeholder="Your address" required>
		  </div>
		  <div class="form-group col-md-6">
		    <label>Address 2</label>
		    <input type="text" class="form-control" name="secondAddress" placeholder="Second address">
		  </div>
	</div>
		  <div class="form-row">
		    <div class="form-group col-md-4">
		      <label>City</label>
		      <input type="text" class="form-control" name="city" placeholder="Your city" required>
		    </div>
		    <div class="form-group col-md-4">
		      <label>Country</label>
		      <input type="text" class="form-control" name="country" placeholder="Your country" required>
		    </div>
		    <div class="form-group col-md-4">
		      <label>Zip</label>
		      <input type="number" class="form-control" name="zip" placeholder="Your zip code" required>
		    </div>
		  </div>
		  <div class="form-group">
		    <div class="form-check">
		      <input class="form-check-input" type="checkbox"required>
		      <label class="form-check-label">
		        I agree to the <a href="#">Terms of Use & Privacy Policy</a>
		      </label>
		    </div>
		    <div class="form-check">
		      <input class="form-check-input" type="checkbox" name="newsletter" value='true'>
		      <label class="form-check-label">
		        Subscribe newsletters
		      </label>
		    </div>
		  </div>
		  <button type="submit" class="btn btn-primary">Sign in</button>
	</form>
</div>

<% include ../partials/footer %>
