<% include ../partials/header %>
<div class="container w-50 p-3">
	<div>
		<form action="/reset/<%=token%>" method="post">
			<div class="form-group">
			    <label>New Password:</label>
			    <input type="password" name="password" class="form-control" placeholder="Your New Password">
			</div>
			<div class="form-group">
			    <label>Confirm Password:</label>
			    <input type="password" name="confirm" class="form-control" placeholder="Repeat Your New Password">
			</div>
			<button type="submit" class="btn btn-info btn-block">Update Password</button>
		</form>
	</div>
</div>


<% include ../partials/footer %>